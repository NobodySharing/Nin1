<Window x:Class="GUI.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:GUI" d:DataContext="{d:DesignInstance Type=local:C_MainWin}"
		mc:Ignorable="d"
		Title="N in 1" Height="800" Width="1300" Closing="OnClosing">
	<Window.Resources>
		<local:C_MainWin x:Key="DataFromGUI"/>
	</Window.Resources>
	<Window.DataContext>
		<Binding Source="{StaticResource DataFromGUI}"/>
	</Window.DataContext>
	<TabControl x:Name="MainTabCtrl" Margin="2">
		<TabItem x:Name="TI_VPE" Header="Very primitive encryption">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*"/>
					<ColumnDefinition Width="5 px"/>
					<ColumnDefinition Width="1*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="22 px"/>
					<RowDefinition Height="55 px"/>
					<RowDefinition Height="22 px"/>
					<RowDefinition Height="1*"/>
					<RowDefinition Height="30 px"/>
				</Grid.RowDefinitions>
				<Menu Grid.Row="0" Grid.ColumnSpan="3" Height="22">
					<MenuItem Header="Open/Save _Message">
						<MenuItem Header="Open plain message text file" Click="MI_VPE_OpenPlaMsgTxtFile_Click"/>
						<MenuItem Header="Open encrypted message binary file" Click="MI_VPE_OpenEncMsgBinFile_Click"/>
						<MenuItem Header="Open encrypted message text file" Click="MI_VPE_OpenEncMsgTxtFile_Click"/>
						<Separator/>
						<MenuItem Header="Save plain message text file" Click="MI_VPE_SavePlaMsgTxtFile_Click"/>
						<MenuItem Header="Save encrypted message binary file" Click="MI_VPE_SaveEncMsgBinFile_Click"/>
						<MenuItem Header="Save encrypted message text file" Click="MI_VPE_SaveEncMsgTxtFile_Click"/>
					</MenuItem>
					<MenuItem Header="_Settings">
						<MenuItem Header="Open settings composer" Click="MI_VPE_SettingsComp_Click"/>
						<Separator/>
						<MenuItem Header="Generate all settings for current encryption" Click="MI_VPE_QuickSettGen_Click"/>
						<MenuItem Header="Open and use settings" Click="MI_VPE_QuickSettOpen_Click"/>
						<MenuItem Header="Save currently used settings to a file" Click="MI_VPE_QuickSettSave_Click"/>
						<Separator/>
						<MenuItem Header="Save current settings to a file" Click="MI_VPE_SaveSett_Click"/>
						<MenuItem Header="Load settings from a file" Click="MI_VPE_LoadSett_Click"/>
						<MenuItem Header="Save current settings library to a file" Click="MI_VPE_SaveSettLib_Click"/>
						<MenuItem Header="Load settings library from a file" Click="MI_VPE_LoadSettLib_Click"/>
						<MenuItem Header="Save current table library to a file" Click="MI_VPE_SaveTableLib_Click"/>
						<MenuItem Header="Load table library from a file" Click="MI_VPE_LoadTableLib_Click"/>
					</MenuItem>
					<MenuItem Header="_Quick select settings">
						<!--Automatically generated content-->
					</MenuItem>
				</Menu>
				<Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="96 px"/>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="72 px"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="1*"/>
						<RowDefinition Height="1*"/>
					</Grid.RowDefinitions>
					<TextBlock Text="Rotor positions:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="2"/>
					<DockPanel Grid.Row="1" Grid.Column="0">
						<Button Name="B_VPE_RotPozMinus" Content="–" Padding="4, 2, 4, 4" Margin="2, 2, 1, 2" Click="B_VPE_RotPozMinus_Click"/>
						<Button Name="B_VPE_RotPozPlus" Content="+" Padding="4, 2, 4, 4" Margin="1, 2, 1, 2" Click="B_VPE_RotPozPlus_Click"/>
						<TextBox x:Name="TB_VPE_RotPozIdx" Margin="1, 2, 2, 2" Text="{Binding Path=VPE_RotPozIdxStr, Mode=TwoWay}" FontFamily="Bahnschrift" FontSize="16"/>
					</DockPanel>
					<TextBox x:Name="TB_VPE_RotPoz" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="2, 2, 2, 2" Text="{Binding Path=VPE_RotPozStr, Mode=TwoWay}" TextWrapping="Wrap" FontFamily="Bahnschrift" FontSize="14"/>
					<Button x:Name="B_VPE_UseCustRotPoz" Content="Use" Grid.Column="2" Grid.Row="0" Margin="1" Click="B_VPE_UseCustPozSet_Click"/>
					<Button x:Name="B_VPE_RemSelRotPoz" Content="Remove" Grid.Column="2" Grid.Row="1" Margin="1" Click="B_VPE_RemSelRotPoz_Click"/>
				</Grid>
				<Grid Grid.Row="2" Grid.Column="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="100px"/>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="1*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="1*"/>
					</Grid.RowDefinitions>
					<TextBlock Grid.Row="0" Grid.Column="0" Text="Plain text" HorizontalAlignment="Center" VerticalAlignment="Center"/>
					<Button Grid.Row="0" Grid.Column="2" MaxHeight="21" MaxWidth="100" Content="Encrypt as:" Click="B_VPE_Encrypt"/>
					<ComboBox Grid.Row="0" Grid.Column="3" MaxHeight="21" MaxWidth="150" />
				</Grid>
				<Grid Grid.Row="2" Grid.Column="2">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="100px"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="1*"/>
					</Grid.RowDefinitions>
					<Button Grid.Row="0" Grid.Column="0" MaxHeight="21" MaxWidth="100" Content="Decrypt as:" Click="B_VPE_Decrypt"/>
					<ComboBox Grid.Row="0" Grid.Column="1" MaxHeight="21" MaxWidth="150"/>
					<TextBlock Grid.Row="0" Grid.Column="3" Text="Encrypted text" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				</Grid>
				<TextBox x:Name="TB_VPE_Left" Grid.Column="0" Grid.Row="3" Margin="2" Text="{Binding Path=VPE_PlainStr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" FontFamily="Liberation Sans" FontSize="12"/>
				<TextBox x:Name="TB_VPE_Right" Grid.Column="2" Grid.Row="3" Margin="2" Text="{Binding Path=VPE_EncrypStr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" FontFamily="Liberation Sans" FontSize="12"/>
				<Grid Grid.Row="4" Grid.Column="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="1*"/>
					</Grid.ColumnDefinitions>
					<StackPanel Grid.Column="0" Orientation="Horizontal">
						<Label Content="Entropy:"/>
						<TextBox x:Name="TB_VPE_Left_Entropy" MinWidth="100" MaxHeight="23" Margin="4" Text="{Binding Path=VPE_Left_EntropyStr, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
					</StackPanel>
					<StackPanel Grid.Column="1" Orientation="Horizontal">
						<Label Content="Unique Char Count:"/>
						<TextBox x:Name="TB_VPE_Left_UniqueCharCount" MinWidth="50" MaxHeight="23" Margin="4" Text="{Binding Path=VPE_Left_UniqueCharCountStr, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
					</StackPanel>
					<StackPanel Grid.Column="2" Orientation="Horizontal">
						<Label Content="Length:"/>
						<TextBox x:Name="TB_VPE_Left_Length" MinWidth="50" MaxHeight="23" Margin="4" Text="{Binding Path=VPE_Left_LengthStr, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
					</StackPanel>
				</Grid>
				<Grid Grid.Row="4" Grid.Column="2">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="1*"/>
					</Grid.ColumnDefinitions>
					<StackPanel Grid.Column="0" Orientation="Horizontal">
						<Label Content="Entropy:"/>
						<TextBox x:Name="TB_VPE_Right_Entropy" MinWidth="100" MaxHeight="23" Margin="4" Text="{Binding Path=VPE_Right_EntropyStr, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
					</StackPanel>
					<StackPanel Grid.Column="1" Orientation="Horizontal">
						<Label Content="Unique Char Count:"/>
						<TextBox x:Name="TB_VPE_Right_UniqueCharCount" MinWidth="50" MaxHeight="23" Margin="4" Text="{Binding Path=VPE_Right_UniqueCharCountStr, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
					</StackPanel>
					<StackPanel Grid.Column="2" Orientation="Horizontal">
						<Label Content="Length:"/>
						<TextBox x:Name="TB_VPE_Right_Length" MinWidth="50" MaxHeight="23" Margin="4" Text="{Binding Path=VPE_Right_LengthStr, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
					</StackPanel>
				</Grid>
			</Grid>
		</TabItem>
		<TabItem x:Name="TI_NDT" Header="New date–time">
			<Grid>
				<Grid.ColumnDefinitions>

				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>

				</Grid.RowDefinitions>
			</Grid>
		</TabItem>
		<TabItem x:Name="TI_DTCalc" Header="Date–time calculator">
			<Grid>
				<Grid.ColumnDefinitions>

				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>

				</Grid.RowDefinitions>
			</Grid>
		</TabItem>
		<TabItem x:Name="TI_Factor" Header="Factorizator">
			<Grid>
				<Grid.ColumnDefinitions>

				</Grid.ColumnDefinitions> 
				<Grid.RowDefinitions>

				</Grid.RowDefinitions>
			</Grid>
		</TabItem>
		<TabItem x:Name="TI_PSWDGen" Header="Password generator">
			<Grid>
				<Grid.ColumnDefinitions>

				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>

				</Grid.RowDefinitions>
			</Grid>
		</TabItem>
		<TabItem x:Name="TI_MapDown" Header="Maps downloader">
			<Grid>
				<Grid.ColumnDefinitions>

				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>

				</Grid.RowDefinitions>
			</Grid>
		</TabItem>
	</TabControl>
</Window>